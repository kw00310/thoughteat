<div> 
<% if current_user == (@user) %>
<h3>Submit a recipe to your cookbook</h3>
  <%= form_for(@recipe) do |f| %>
    <%= render 'sharedviews/error_messages', object: f.object %>
    <div class="field">
      <%= f.text_field :title, placeholder: "Your Dish Title"%>
      <%= f.text_area :ingredients, placeholder: "Please list your ingredients here.", class: "text_area"%>
      <%= f.text_area :method, placeholder: "Please write your cooking methods here.", class: "text_area" %>
    </div>
    <%= f.submit "Post", class: "btn btn-primary" %>
  <% end %>
<% end %>
</div>