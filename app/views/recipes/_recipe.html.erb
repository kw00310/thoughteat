<li id="recipe-<%= recipe.id %>">
  <span class="image"><%= image_tag recipe.image %></span>
  <span class="recipename"><%= recipe.title %></span>
  <span class="ingredients"><%= recipe.ingredients %></span>
  <span class="method"><%= recipe.method %></span>
  <span class="timestamp">
    <% if current_user==(recipe.user) %>
      <%= link_to "[delete recipe]", recipe, method: :delete,
                                       data: { confirm: "You sure?" } %>
    <% end %>
  </span>
</li>